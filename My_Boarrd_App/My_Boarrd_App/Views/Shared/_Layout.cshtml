<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="color:white"> @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @style = "color:white" }) </li>
                    <li style="color:white"> @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @style = "color:white" }) </li>
                    <li style="color:white"> @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @style = "color:white" }) </li>

                </ul>
                @if (ViewBag.username != null)
                {
                    <ul class="nav navbar-nav navbar-right">

                        <li style="color:white;text-align:center">
                            <i class="fa fa-user-circle">
                                Hello @ViewBag.username
                            </i>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (ViewBag.Error != null)
            {
            <div class="alert alert-danger">
                <strong> @ViewBag.Error </strong>
            </div>
        }
        <div>
            @RenderBody()
            <hr />
        </div>

    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My Shared Board Application</p>
    </footer>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
