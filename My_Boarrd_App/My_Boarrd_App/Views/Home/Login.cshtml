
@{
    ViewBag.Title = "Login";
    TempData["group_name"] = ViewBag.group_name;
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("User Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="user_name">
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text"  name="password">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
<input type="submit" value="Login" name="Login_Or_Register" class="btn btn-default" />
<input type="submit" value="Register" name="Login_Or_Register" class="btn btn-default" />
            </div>
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
